<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiLabs.View.Pages.ProfilePages.ProfileShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiLabs.View.Pages.ProfilePages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True">

    <TabBar Shell.BackgroundColor="{x:StaticResource FirstColor}">
        <Tab Title="Авторизация" Icon="/Profile/login.png">
            <ShellContent ContentTemplate="{DataTemplate pages:AuthorizationPage}"/>
        </Tab>
        <Tab Title="Регистрация" Icon="/Profile/registration.png">
            <ShellContent ContentTemplate="{DataTemplate pages:RegistrationPage}"/>
        </Tab>
    </TabBar>
</Shell>