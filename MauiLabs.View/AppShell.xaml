<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiLabs.View.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MauiLabs.View.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True">

    <TabBar Route="profile" Shell.BackgroundColor="{x:StaticResource FirstColor}">
        <Tab Title="Авторизация">
            <ShellContent
                ContentTemplate="{DataTemplate pages:AuthorizationPage}"
                Route="authorization" />
        </Tab>
        <Tab Title="Регистрация">
            <ShellContent
                ContentTemplate="{DataTemplate pages:RegistrationPage}"
                Route="registration" />
        </Tab>
    </TabBar>

</Shell>