<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLabs.View.Commons.ContentViews.ExpanderView" 
             x:Name="this">
    <StackLayout Orientation="Vertical" Spacing="5">
        <Border Stroke="White" BackgroundColor="{x:StaticResource FirstColor}" Padding="10" x:Name="ExpandButton">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"/>
            </Border.StrokeShape>
            <HorizontalStackLayout HorizontalOptions="Fill" Spacing="5">
                <Label Text="Раскрыть" HorizontalOptions="Center" FontSize="16" TextColor="White"/>
                <Image Source="{x:Binding ButtonIcon, Source={x:Reference this}}" WidthRequest="12" HeightRequest="12" 
                       Margin="0, 5, 0, 0"/>
            </HorizontalStackLayout>
        </Border>
        <Border Content="{x:Binding Item, Source={x:Reference this}}" Padding="3"/>
    </StackLayout>
</ContentView>
